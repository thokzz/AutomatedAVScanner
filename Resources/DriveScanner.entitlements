<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Essential permissions for scanning external drives -->
    <key>com.apple.security.files.removable-volume.read-write</key>
    <true/>
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>
    
    <!-- Needed for running shell scripts via Process -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Needed for ClamAV integration -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Remove app sandboxing completely -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
</dict>
</plist>